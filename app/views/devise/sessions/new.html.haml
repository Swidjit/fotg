%h2.centered Improve your typing skills
%h4.centered And have some fun while doing so...
.login-form
  =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    =f.hidden_field :session_id, :value=> "dfgd", :id => "session-id"
    %div
      = f.label :login
      = f.email_field :login, autofocus: true
    %div
      = f.label :password
      = f.password_field :password, autocomplete: "off"
    = f.submit "Sign in", :class => "button"

    %div=link_to "New user?  Create an account", new_user_session_path
    %div=link_to "Forgot your password?", new_password_path(resource_name)
:javascript
  $('#session-id').val($.cookie("session_id"));