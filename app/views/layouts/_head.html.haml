%nav.top-bar{"data-topbar" => "", :role => "navigation"}
  %ul.title-area
    %li.name
      %h1
        =link_to root_path do
          =image_tag('logo.png', :size=>'35x35')
          Good Luck
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    -if user_signed_in?
      %ul.right
        %li.has-form{:style => 'padding-right: 3px !important;'}
          =link_to games_path, :class=>'button header-button' do
            %i.fi-play
            Play Games
        %li.has-form{:style => 'padding-right: 3px !important;'}
          =link_to pages_path('leaderboard'), :class=>'button header-button' do
            %i.fi-crown
            Leaderboard
        %li.has-dropdown
          %a{:href => "#"}=current_user.username
          %ul.dropdown
            %li
              %a{:href => "#"} Account Settings
            %li.active
              = link_to "Log out", destroy_session_path(:user), :method => :delete
    -else
      %ul.right
        %li.has-form{:style => 'padding-right: 3px !important;'}
          =link_to new_user_session_path, :class=>'button header-button' do
            Login
        %li.has-form{:style => 'padding-right: 3px !important;'}
          =link_to  new_user_registration_path, :class=>'button header-button' do
            Register

