.row
  -Game.all.each do |game|
    .small-12.medium-4.large-4.columns
      .stats-box
        %h3=game.title
        .stat-label Avg Score
        .stat-data=game.avg
        .clear
        -if user_signed_in?
          -@stat = GameStat.where(:user_id=>current_user.id, :game_id=>game.id).first
          -if @stat.present?
            .stat-label Your Avg
            .stat-data=@stat.avg
            .clear
        .stat-label Times Played
        .stat-data=game.plays
      .stats-box
        %h5 Best Luck
        -@best = Ranking.where(:game => game).order(score: :desc).limit(15)
        -@best.each do |l|
          .stat-label=l.user.email
          .stat-data=l.score
          .clear

      .stats-box
        %h5 Worst Luck
        -@worst = Ranking.where(:game => game).order(:score).limit(15)
        -@worst.each do |l|
          .stat-label=l.user.email
          .stat-data=l.score
